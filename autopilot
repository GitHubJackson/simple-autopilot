#!/bin/bash

# 获取脚本所在目录的绝对路径
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
INSTALL_DIR="$SCRIPT_DIR/install"

if [ "$1" == "status" ]; then
    if [ -f "$INSTALL_DIR/bin/monitor" ]; then
        "$INSTALL_DIR/bin/monitor"
    else
        echo "Error: Monitor executable not found."
        echo "Please build the project first: ./build_all.sh"
    fi
elif [ "$1" == "help" ] || [ -z "$1" ]; then
    echo "Usage: ./autopilot {command}"
    echo ""
    echo "Commands:"
    echo "  status   Show real-time system status and node health"
    echo ""
else
    echo "Unknown command: $1"
    echo "Try './autopilot help' for usage."
fi

